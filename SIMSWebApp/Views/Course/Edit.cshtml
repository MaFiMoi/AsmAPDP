@model SIMSWebApp.Models.Course
@{
    ViewData["Title"] = "Edit Course";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container px-4">
    <h2>Edit Course</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="CourseID" />

        <div class="form-floating mb-3">
            <input asp-for="CourseCode" class="form-control" placeholder="Enter course code" />
            <label asp-for="CourseCode">Course Code</label>
            <span asp-validation-for="CourseCode" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="CourseName" class="form-control" placeholder="Enter course name" />
            <label asp-for="CourseName">Course Name</label>
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <textarea asp-for="Description" class="form-control" placeholder="Enter description" style="height: 100px;"></textarea>
            <label asp-for="Description">Description</label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Credits" type="number" min="0" class="form-control" placeholder="Enter credits" />
            <label asp-for="Credits">Credits</label>
            <span asp-validation-for="Credits" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Department" class="form-control" placeholder="Enter department" />
            <label asp-for="Department">Department</label>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
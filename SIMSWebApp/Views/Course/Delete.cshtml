@model SIMSWebApp.Models.Course
@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container px-4">
    <h2>Delete Course</h2>
    <h4>Are you sure you want to delete this course?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Course Code</dt>
            <dd class="col-sm-10">@Model.CourseCode</dd>

            <dt class="col-sm-2">Course Name</dt>
            <dd class="col-sm-10">@Model.CourseName</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Credits</dt>
            <dd class="col-sm-10">@Model.Credits</dd>

            <dt class="col-sm-2">Department</dt>
            <dd class="col-sm-10">@Model.Department</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="CourseID" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

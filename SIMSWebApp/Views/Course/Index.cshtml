@{
    ViewData["Title"] = "Courses List";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container px-4">
    <h1>Courses List</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Course</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Course Code</th>
                <th>Course Name</th>
                <th>Description</th>
                <th>Credits</th>
                <th>Department</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseCode</td>
                    <td>@course.CourseName</td>
                    <td>@course.Description</td>
                    <td>@course.Credits</td>
                    <td>@course.Department</td>
                    <td>@course.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@course.CourseID" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@course.CourseID" class="btn btn-sm btn-danger ms-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

            </div>

            <div class="btec-notification-item">
                <div class="d-flex">
                    <div class="btec-notification-icon">📋</div>
                    <div class="flex-grow-1">
                        <div class="btec-notification-date">12/08/25 10:32</div>
                        <div class="btec-notification-title">[BTEC EXAM]: ANNOUNCEMENT OF PROGRESS TEST 2 SUBJECTS ENGLISH SUBJECTS SUMMER 2025 PART 2 SCHEDULE (EXAM DATE 11/08/2025)</div>
                        <div class="btec-notification-expired">Expired: 18/08/25</div>
                    </div>
                </div>
            </div>

            <div class="btec-notification-item">
                <div class="d-flex">
                    <div class="btec-notification-icon">📋</div>
                    <div class="flex-grow-1">
                        <div class="btec-notification-date">09/08/25 11:10</div>
                        <div class="btec-notification-title">[BTEC EXAM]: ANNOUNCEMENT OF 1ST EXAM SCORES - ENGLISH SUMMIT 1 SUMMER 2025 PART 1</div>
                        <div class="btec-notification-expired">Expired: 15/08/25</div>
                    </div>
                </div>
            </div>

            <div class="btec-notification-item">
                <div class="d-flex">
                    <div class="btec-notification-icon">📋</div>
                    <div class="flex-grow-1">
                        <div class="btec-notification-date">08/08/25 09:11</div>
                        <div class="btec-notification-title">Thông báo về việc nộp học phí kỳ FA2025</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Section -->
    <div class="btec-search-section">
        <h5 class="mb-3">More</h5>
        <div class="btec-search-container">
            <input type="text"
                   class="btec-search-input"
                   placeholder="Search for news..."
                   id="btecSearchInput">
            <button class="btec-search-btn" onclick="performBtecSearch()">
                🔍
            </button>
        </div>
    </div>
</div>

<script>
    // JavaScript for BTEC dashboard interactions
    document.addEventListener('DOMContentLoaded', function() {
        // Add click interactions to notification items
        document.querySelectorAll('.btec-notification-item').forEach(item => {
            item.addEventListener('click', function(e) {
                // Create ripple effect
                const ripple = document.createElement('div');
                ripple.style.cssText = `
                    position: absolute;
                    border-radius: 50%;
                    background: rgba(103, 126, 234, 0.3);
                    transform: scale(0);
                    animation: ripple 0.6s linear;
                    pointer-events: none;
                `;

                const rect = this.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;

                ripple.style.width = ripple.style.height = size + 'px';
                ripple.style.left = x + 'px';
                ripple.style.top = y + 'px';

                this.appendChild(ripple);

                setTimeout(() => {
                    ripple.remove();
                }, 600);

                // Add scale effect
                this.style.transform = 'scale(0.98)';
                setTimeout(() => {
                    this.style.transform = 'translateY(-3px)';
                }, 100);
            });
        });

        // Search functionality
        document.getElementById('btecSearchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                performBtecSearch();
            }
        });
    });

    function performBtecSearch() {
        const searchInput = document.getElementById('btecSearchInput');
        const query = searchInput.value.trim();

        if (query) {
            searchInput.style.transform = 'scale(0.95)';
            setTimeout(() => {
                searchInput.style.transform = 'scale(1)';
                // Thay thế alert bằng logic tìm kiếm thực tế của bạn
                console.log('Tìm kiếm: ' + query);
                // Ví dụ: window.location.href = '/Search?query=' + encodeURIComponent(query);
            }, 100);
        }
    }
</script>
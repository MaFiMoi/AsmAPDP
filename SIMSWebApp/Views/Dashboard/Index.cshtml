    </ol>

    <!-- BTEC Welcome Section -->
    <div class="btec-welcome-header">
        <h2>Welcome</h2>
    </div>

    <!-- Notifications Section -->
    <div class="row">
        <div class="col-12">
            <div class="btec-notification-item btec-pulse">
                <div class="d-flex">
                    <div class="btec-notification-icon">📋</div>
                    <div class="flex-grow-1">

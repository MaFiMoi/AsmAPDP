@model IEnumerable<SIMSWebApp.Models.Student>

@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container px-4">
    <h1>Student List</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <p>
        <a class="btn btn-primary" href="@Url.Action("Create", "Student")">Add New Student</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Program</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.StudentID</td>
                    <td>@s.FirstName</td>
                    <td>@s.LastName</td>
                    <td>@s.Email</td>
                    <td>@s.Phone</td>
                    <td>@s.Program</td>
                    <td>
                        <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Student", new { id = s.StudentID })">Edit</a>
                        <a class="btn btn-danger btn-sm ms-1" href="@Url.Action("Delete", "Student", new { id = s.StudentID })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


